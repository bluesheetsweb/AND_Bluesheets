<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <src.wrapperutil.uicomponent.RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center">

        <src.wrapperutil.uicomponent.LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/_16dp"
            android:gravity="center"
            android:orientation="vertical"
            android:paddingLeft="@dimen/_20dp"
            android:paddingTop="@dimen/_10dp"
            android:paddingRight="@dimen/_20dp"
            android:paddingBottom="@dimen/_15dp"
            app:background_state="WHITE"
            app:corner_radius="@dimen/_7dp">

            <src.wrapperutil.uicomponent.LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingVertical="@dimen/_10dp">

                <src.wrapperutil.uicomponent.ImageView
                    android:id="@+id/iv_cancel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="end"
                    android:src="@drawable/ic_rg_cross" />

                <src.wrapperutil.uicomponent.ImageView
                    android:id="@+id/iv_headicon"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:src="@drawable/ic_rg_recording_popup_icon" />

                <src.wrapperutil.uicomponent.TextView
                    android:id="@+id/tv_heading"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="@dimen/_12dp"
                    android:gravity="center_horizontal"
                    android:textSize="@dimen/txt_size_default"
                    android:textStyle="bold"
                    tools:text="test" />


                <Button
                    android:id="@+id/btn_ok"
                    android:layout_width="@dimen/_120dp"
                    android:layout_height="@dimen/_40dp"
                    android:layout_gravity="center"
                    android:layout_marginTop="@dimen/_20dp"
                    android:layout_weight="1"
                    android:background="@drawable/rg_bg_login_enable"
                    android:textAllCaps="false"
                    android:textColor="@color/white"
                    android:textStyle="bold"
                    tools:text="OK" />


            </src.wrapperutil.uicomponent.LinearLayout>

        </src.wrapperutil.uicomponent.LinearLayout>
    </src.wrapperutil.uicomponent.RelativeLayout>
</layout>