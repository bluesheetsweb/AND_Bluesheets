<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="MyToolbarStyle" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="actionOverflowButtonStyle">@style/MyOverflowButtonStyle</item>
    </style>

    <style name="MyOverflowButtonStyle" parent="Widget.AppCompat.ActionButton.Overflow">
        <item name="android:tint">@color/white</item>
    </style>


    <style name="EditTextTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorControlNormal">@color/black_new</item>
        <item name="colorControlActivated">@color/black_new</item>
        <item name="colorControlHighlight">@color/black_new</item>
    </style>


    <style name="tabLayoutStyle" parent="Widget.Design.TabLayout">
        <item name="tabTextAppearance">@android:style/TextAppearance.Widget.TabWidget</item>
        <item name="android:textStyle">bold</item>

    </style>


    <style name="StyletabLayout" parent="Widget.Design.TabLayout">
        <item name="tabTextAppearance">@android:style/TextAppearance.Widget.TabWidget</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">15sp</item>

    </style>

    <style name="editButtonPaddingStyle">
        <item name="android:paddingTop">@dimen/_7dp</item>
        <item name="android:paddingBottom">@dimen/_7dp</item>
        <item name="android:paddingLeft">@dimen/_10dp</item>
        <item name="android:paddingRight">@dimen/_10dp</item>
    </style>


    <style name="editProfileTop">
        <item name="android:layout_marginTop">@dimen/_24dp</item>
    </style>
 <style name="editProfileSubHeaderTop">
        <item name="android:layout_marginTop">@dimen/_7dp</item>
    </style>


    <style name="editProfileSepratorTop">
        <item name="android:layout_marginTop">@dimen/_6dp</item>
    </style>


    <style name="AlertDialog" parent="Base.Theme.AppCompat.Light.Dialog">
        <item name="android:textColor">#000000</item>
        <item name="android:textColorPrimary">#000000</item>
        <item name="android:windowMinWidthMajor">80%</item>
        <item name="android:windowMinWidthMinor">80%</item>
    </style>


</resources>